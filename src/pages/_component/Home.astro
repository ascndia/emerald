---
import Image from "astro/components/Image.astro";
import Img from "../../assets/app.png";
---

<header id="home">
  <div class="container">
    <div class="content">
      <h1 class="display-4 fw-semibold text-primary">Sharpen your thinking.</h1>
      <div class="lead fs-3 mt-4 text-secondary">
        Emerald is the Open Source and flexible writing app that adapts to the
        way you think.
      </div>
      <div class="d-flex flex-column flex-md-row gap-4 mt-5">
        <button class="btn btn-prim">Get Obsidian for Windows</button>
        <button class="btn btn-ghost">More Platform</button>
      </div>
    </div>
    <div class="screenshot">
      <Image class={"w-100 screenshot-img h-auto"} src={Img} alt="hero" />
    </div>
  </div>
</header>

<style>
  header {
    height: fit-content;
  }
  .btn {
    padding: 16px;
    font-weight: 600;
    font-size: large;
  }
  .content {
    padding-top: 220px;
  }

  .lead {
    max-width: 60%;
    line-height: 1.2;
    font-weight: 400;
  }
  .screenshot {
    margin-top: 78px;
    position: relative;
    width: 100%;
    max-width: 100%;
  }
  @media (max-width: 768px) {
    h1 {
      font-size: 48px !important;
    }
    .lead {
      max-width: 100%;
    }
    .screenshot {
      height: 480px !important;
      width: auto !important;
    }
    .screenshot .screenshot-img {
      position: absolute;
      height: 100% !important;
      width: auto !important;
      right: 0;
    }
  }
</style>

---
interface Props {
  title: string;
  href?: string;
}
const { title, href } = Astro.props;
---

<li class="nav-item">
  <a class="nav-link" aria-current="page" href={href}>{title}</a>
</li>

<style>
  .nav-item a {
    font-weight: 500;
    transition: 300ms;
    color: var(--text-secondary);
    transition: 500ms;
  }
  .nav-item a:hover,
  .active {
    color: var(--primary) !important;
  }
</style>
